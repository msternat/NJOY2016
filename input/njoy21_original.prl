      $run_type = "njoy21 parallel debug";
    } elsif( $par eq "par" ) {
      $run_type = "njoy21 parallel";
    } elsif( $deb eq "deb" ) {
      $run_type = "njoy21 debug";
    } else {
      $run_type = "njoy21 single-processor";
    }
