#!/usr/bin/perl
#
# usage: njoy21.prl {job}
#
# check number of input arguments
#
if( $#ARGV > 2 || $#ARGV < 0 ) { 
       print "Error: NJOY21 called with invalid number of arguments\n";
       print "Usage: NJOY21 {job} \n";
       die "njoy21 script aborted\n";
}
      use Env;
      $system = $ENV{ 'SYSTEMTYPE' };
#      require "ctime.pl";
print "NJOY21 invoked with SYSTEMTYPE = $1=\n";
print "NJOY21 ENV conversion = $system=\n";
print "space for checking\n";
      if ( $system eq "unix") {
         require "getcwd.pl";

         $pwd        = getcwd();
         $user       = `whoami`;
         $opsys      = "UNIX";
         $type       = `uname -pris`;
         $machine    = `uname -n`;
         $rm         = "rm -f";
         $sep        = "/";
         $cpx        = "cp -f -p";        
         $mv         = "mv";
         $executable = "njoy21";

         chomp($pwd);
         chomp($user);
         chomp($machine);
         chomp($type);

      }  elsif ( $system eq "dos") {

         $pwd        = Win32::GetCwd();
         $user       = Win32::LoginName();
         @os         = qw(Wins, Win95, WinNT);
         $opsys      = "WIN32";
         $type       = "@os[$id] $major\.$minor $string (Build $build)";
         $machine    = Win32::NodeName;
#         $date       = &ctime(time);
         $date = "today";
         chomp($date);

         $rm         = "del /F";
#         $rm         = "rm -f";
         $sep        = "\\";
         $cpx        = "copy";     
         $mv         = "move";
         $executable = "njoy21.exe";

      }  else {

         print "Error in system variable = $system \n";
         die "njoy21 script aborted\n";
      }
      $ar = 0;
      $nar = 2;
      $job = $ARGV[$ar];
      ++$ar;
      $isotope = $ARGV[$ar];
 exit 901;

      $numarg = $#ARGV + 1;
      if ($numarg == 1) {
          $isotope = "dummy";
      } elsif  ($numarg != $nar) {
          print "\n\n   illegal number of arguments, arguments = $numarg  \n";
          print "   usage: $0 {job} {isotope} \n";
          die "   try again $!\n";
      }

#      $date = &ctime(time);
      $date = "today";
      chomp($date);

    while ( $ARGV[0] )  {
        $job  = $ARGV[0];
        $offs = 0;
        $char = substr( $job, $offs, 1);
        if( $char eq "-" ) {
            $offs += 1;
            $char = substr( $job, $offs, 1);
            while( $char ) {
#twl                print "$char\n";
                if( $char eq "d" ) {
                    $deb = "deb";
                    if( $system eq "unix" ) {
                        $executable = "xnjoy-deb";
                    } 
                } elsif( $char eq "p" ) {
                    $par = "par";
                    if( $ARGV[1] =~ m/^[0-9]+$/ ) {
                        $n = $ARGV[1];
                        shift;
                    }
                } elsif( $char eq "a" ) {
                # for now do nothing
                } elsif( $unknownopt eq "" ) {
                    $unknownopt = $char;
                }
                $offs += 1;
                $char = substr( $job, $offs, 1);
            }
        } elsif( $ARGV[1] ne "" && $unknownopt eq "" ) {
            $unknownopt = $job;
        }
        shift;
    }

#
#   export job and type for use in the njoy-2012 executable
#
    $ENV{njoy21_JOB} = $job;

