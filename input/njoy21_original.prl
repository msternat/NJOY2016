#      }
      if ( $system eq "dos") {
         if ( $isotope eq "dummy") {
            $command = "copy $work_dir\\output $output_dir\\${job}.out";
#            print "Print command = $command \n";
            system($command);
#            exit 9;
         } else {
            system("copy $work_dir\\output $output_dir\\${job}-${isotope}.out");  
         }
         if ($isotope ne "dummy") {
#            $command = "copy $work_dir\\$isotope.* $recoilfile \n";
#            print "Test file transfer $command ";
             $filout = "$isotope*";
#             print "Check is $isotope \n";
#             print "metric = $filout \n";
#             if  (-e $filout ) {
                $command = "copy $work_dir\\$isotope.* $recoilfile  \n";
#                print "Transfer command = $command \n";
                system("copy $work_dir\\$isotope.* $recoilfile  \n"); 
#             }
#            system("copy $work_dir\\${job}.log $output_dir\\${job}-${isotope}.log");    
         }
      } elsif ($system eq "unix") {
         if ( $isotope eq "dummy") {
            system("cp $work_dir/output $output_dir/${job}.out");  
         } else {
            system("cp $work_dir/output $output_dir/${job}-${isotope}.out"); 
            system("cp $work_dir/$isotope* $recoilfile");  
         }
#         system("cp $work_dir/${job}.log $output_dir/${job}-${isotope}.log");    
      } else {
          print " \n \n ERROR $system system undefined \n \n";
          die "   try again $!\n";
      }
#       print " \n Move $work_dir/output to $output_dir/${job}.out \n";
#
